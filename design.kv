#:kivy 2.0.0
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            padding: 15, 15
            spacing: 20, 20
            Label: 
                font_size: '20sp'
                text: "Логин пользователя"
            TextInput:
                id: username
                hint_text: "Имя пользователя"
            TextInput:
                id: password
                password: True
                hint_text: "Пароль"
            RelativeLayout:
                Button:
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    text: "Логин"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Забыли пароль?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Зарегистрироваться"
                on_press: root.sign_up()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text:"Запишитесь на космическое путешествие!"
        TextInput:
            id: username
            hint_text: "имя пользователя"
        TextInput:
            id: password
            hint_text: "пароль"
        Button:
            text: "Продолжить"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1 
        Label:
            text: "Регистрация прошла успешно!"
        Button:
            text: "Страница авторизации"
            on_press: root.go_home()

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                on_press: root.log_out()
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
        Label:
            text: "Как ты себя чувствуешь?"
        TextInput:
            id: feeling
            hint_text: "Что попробовать:sad,happy"
        Button:
            text: "Просветите меня"
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:    
            Label:
                id: quotes
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"
